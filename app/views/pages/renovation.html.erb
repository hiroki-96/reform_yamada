<script>
let currentSlide = 0;
const totalSlides = 3;

function moveSlider(direction) {
  currentSlide += direction;
  
  if (currentSlide < 0) {
    currentSlide = totalSlides - 1;
  } else if (currentSlide >= totalSlides) {
    currentSlide = 0;
  }
  
  const track = document.querySelector('.renovation-slider__track');
  const cardWidth = 600; // カードの幅 + マージン
  track.style.transform = `translateX(-${currentSlide * cardWidth}px)`;
  
  // アクティブカードの更新
  document.querySelectorAll('.renovation-card').forEach((card, index) => {
    card.classList.toggle('renovation-card--active', index === currentSlide);
  });
}
</script>

