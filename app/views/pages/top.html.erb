<!-- コンタクトセクション -->
<section class="contact fade-in from-bottom" id="contact">
  <div class="contact__inner">
    <div class="fade-in scale-up">
      <%= render partial: 'shared/section_label', locals: { en: 'CONTACT', ja: 'お問い合わせ' } %>
    </div>

