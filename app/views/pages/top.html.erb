<!-- サービスセクション -->
<section class="service fade-in from-bottom" id="service">
  <div class="service__container">
    <div class="service__heading fade-in scale-up">
      <%= render partial: 'shared/section_label', locals: { en: 'SERVICE', ja: '目的から探す' } %>
    </div>

    <div class="service__cards">
      <a href="<%= new_house_path %>" class="service__card service__card--new stagger-fade" data-delay="0.1s">
        <div class="service__content">
          <p class="service__text">新築を<br>建てたい方</p>
          <div class="service__arrow">
            <div class="arrow-horizontal"></div>
            <div class="arrow-diagonal"></div>
          </div>
        </div>
      </a>
      <a href="<%= renovation_path %>" class="service__card service__card--reform stagger-fade" data-delay="0.2s">
        <div class="service__content">
          <p class="service__text">リフォームを<br>考えている方</p>
          <div class="service__arrow">
            <div class="arrow-horizontal"></div>
            <div class="arrow-diagonal"></div>
          </div>
        </div>
      </a>
      <a href="<%= exterior_path %>" class="service__card service__card--exterior stagger-fade" data-delay="0.3s">
        <div class="service__content">
          <p class="service__text">外構を<br>考えている方</p>
          <div class="service__arrow">
            <div class="arrow-horizontal"></div>
            <div class="arrow-diagonal"></div>
          </div>
        </div>
      </a>
    </div>
  </div>
</section>

<!-- ワークスセクション -->
