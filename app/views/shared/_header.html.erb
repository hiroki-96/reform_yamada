<!-- ヘッダー -->
<header class="header">
  <div class="header__container">
    <div class="header__logo">
      ロゴ画像を挿入
    </div>
    <nav class="header__nav">
      <ul class="header__nav-list">
        <li class="header__nav-item">
          <a href="<%= root_path %>" class="header__nav-link">
            <span class="nav-text">
              <span class="nav-ja">ホーム</span>
              <span class="nav-en">HOME</span>
            </span>
          </a>
        </li>
        <li class="header__nav-item">
          <a href="<%= new_house_path %>" class="header__nav-link">
            <span class="nav-text">
              <span class="nav-ja">新築</span>
              <span class="nav-en">NEW HOUSE</span>
            </span>
          </a>
        </li>
        <li class="header__nav-item">
          <a href="<%= renovation_path %>" class="header__nav-link">
            <span class="nav-text">
              <span class="nav-ja">リフォーム</span>
              <span class="nav-en">RENOVATION</span>
            </span>
          </a>
        </li>
        <li class="header__nav-item">
          <a href="<%= exterior_path %>" class="header__nav-link">
            <span class="nav-text">
              <span class="nav-ja">外構</span>
              <span class="nav-en">EXTERIOR</span>
            </span>
          </a>
        </li>
        <li class="header__nav-item">
          <a href="<%= example_path %>" class="header__nav-link">
            <span class="nav-text">
              <span class="nav-ja">施工事例</span>
              <span class="nav-en">WORKS</span>
            </span>
          </a>
        </li>
      </ul>
      <div class="header__contact">
        <a href="<%= contact_path %>" class="header__contact-button">
          <img src="<%= asset_path('header/contact-button.svg') %>" alt="お問い合わせボタン" onerror="this.style.display='none'; this.parentElement.style.backgroundImage='url(<%= asset_path('header/contact-button.svg') %>)'; this.parentElement.style.backgroundSize='contain'; this.parentElement.style.backgroundRepeat='no-repeat'; this.parentElement.style.backgroundPosition='center';">
        </a>
      </div>
    </nav>
  </div>
</header>